br
  div.page-header
    h5 顧客詳細

table.table.table-hover.show-table
  tbody
    tr
      th= Customer.human_attribute_name(:id)
      td= @customer.id

    tr
      th= Customer.human_attribute_name(:customer_name)
      td= @customer.customer_name

    tr
      th= Customer.human_attribute_name(:customer_name_kana)
      td= @customer.customer_name_kana

    tr
      th= Customer.human_attribute_name(:customer_initial)
      td= @customer.customer_initial

    tr
      th= Customer.human_attribute_name(:postal_code)
      td= @customer.postal_code

    tr
      th= Customer.human_attribute_name(:tel)
      td= @customer.tel

    tr
      th= Customer.human_attribute_name(:fax)
      td= @customer.fax

    tr
      th= Customer.human_attribute_name(:remarks)
      td= @customer.remarks

    tr
      th= Customer.human_attribute_name(:created_at)
      td= l(@customer.created_at, format: :long)

    tr
      th= Customer.human_attribute_name(:updated_at)
      td= l(@customer.updated_at, format: :long)

.nav.justify-content-center
    = link_to '編集', edit_customer_path, class: 'btn btn-success mr-3'
    = link_to '削除', @customer, method: :delete,
            data: { confirm: "顧客「#{@customer.customer_name}」を削除します。よろしいですか？"},
            class: 'btn btn-warning'

.nav.justify-content-end
    = link_to '顧客一覧', customers_path